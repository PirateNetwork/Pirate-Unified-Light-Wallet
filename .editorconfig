# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Rust
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100

[Cargo.toml]
indent_style = space
indent_size = 2

# Dart/Flutter
[*.dart]
indent_style = space
indent_size = 2
max_line_length = 80

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON
[*.json]
indent_style = space
indent_size = 2

# TOML
[*.toml]
indent_style = space
indent_size = 2

# Markdown
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Makefile
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Batch files (Windows)
[*.bat]
indent_style = space
indent_size = 4
end_of_line = crlf

# Nix
[*.nix]
indent_style = space
indent_size = 2

# XML/HTML
[*.{xml,html}]
indent_style = space
indent_size = 2

# Protocol Buffers
[*.proto]
indent_style = space
indent_size = 2

# Git
[.git*]
indent_style = space
indent_size = 2

